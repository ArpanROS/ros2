<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot_demo" >
    
    <xacro:include filename="$(find robot_description)/urdf/gazebo.xacro"/>
    <xacro:include filename="$(find robot_description)/urdf/ros2_controll.xacro"/>


    <xacro:property name="PI" value="3.14159"/>
    <xacro:property name="effort" value="30.0"/>
    <xacro:property name="velocity" value="10.0"/>

    <xacro:macro name="def_inertia" params="mass">
        <inertial>
            <mass value="${mass}"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                      iyy="1.0" iyz="0.0"
                      izz="1.0"/>
        </inertial>
    </xacro:macro>

    <xacro:macro name="def_transmission" params="number">
        <transmission name="transmission_${number}">
            <plugin>transmissio_interface/SimpleTransmission</plugin>
            <actuator name="motor_${number}" role="actuator1"/>
            <joint name="joint_${number}" role="joint1">
                <mechanical_reduction>1.0</mechanical_reduction>
            </joint>

        </transmission>
    </xacro:macro>

    <link name="world"/>

    <link name="base_link">
        <xacro:def_inertia mass="1.0"/>
        <visual>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <geometry>
               <cylinder length="0.2" radius="0.2"/>
               <!--<mesh filename="package://robot_description/meshes/Base.STL"/>-->
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <geometry>
               <cylinder length="0.2" radius="0.2"/>
               <!--<mesh filename="package://robot_description/meshes/Base.STL"/>-->
            </geometry>
        </collision>

    </link>
    <joint name="base_joint" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>
    
    <link name="base_plate">
        <xacro:def_inertia mass="0.2"/>
        <visual>
            <origin xyz="0 0 0.025" rpy="0 0 0"/>
            <geometry>
               <cylinder length="0.05" radius="0.2"/> 
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.025" rpy="0 0 0"/>
            <geometry>
               <cylinder length="0.05" radius="0.2"/> 
            </geometry>
        </collision>

    </link>

    <joint name="joint_1" type="revolute">
        <parent link="base_link"/>
        <child link="base_plate"/>
        <axis xyz="0 0 1"/>
        <origin xyz="0 0 0.2" rpy="0 0 0"/>
        <limit lower="-1.5707" upper="1.5707" effort="30.0" velocity="10.0"/>
    </joint>

    <link name="support_base_1">
        <xacro:def_inertia mass="0.05"/>
        <visual>
            <origin xyz="0 0 0.09" rpy="0 0 0"/>
            <geometry>
                <box size="0.15 0.15 0.1"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.09" rpy="0 0 0"/>
            <geometry>
                <box size="0.15 0.15 0.1"/>
            </geometry>
        </collision>
    </link>

    <joint name="support_joint_1" type="fixed">
        <parent link="base_plate"/>
        <child link="support_base_1"/>
        <origin xyz="0.14 0 0" rpy="0 0 0"/>
    </joint>

    <link name="support_base_2">
        <xacro:def_inertia mass="0.05"/>
        <visual>
            <origin xyz="0 0 0.09" rpy="0 0 0"/>
            <geometry>
                <box size="0.15 0.15 0.1"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.09" rpy="0 0 0"/>
            <geometry>
                <box size="0.15 0.15 0.1"/>
            </geometry>
        </collision>
    </link>

    <joint name="support_joint_2" type="fixed">
        <parent link="base_plate"/>
        <child link="support_base_2"/>
        <origin xyz="-0.14 0 0" rpy="0 0 0"/>
    </joint>

    <link name="verticle_link">
        <xacro:def_inertia mass="0.25"/>
        <visual>
            <origin xyz="0 0 0.13" rpy="0 0 0"/>
            <geometry>
                <box size="0.09 0.1 0.3"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.13" rpy="0 0 0"/>
            <geometry>
                <box size="0.09 0.1 0.3"/>
            </geometry>
        </collision>
    </link>

    <joint name="joint_2" type="revolute">
        <parent link="support_base_1"/>
        <child link="verticle_link"/>
        <origin xyz="-0.14 0 0.1" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="-1.5707" upper="1.5707" effort="30.0" velocity="10.0"/>
    </joint>


    <link name="verticle_support_link_1">
        <xacro:def_inertia mass="0.05"/>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.09 0.1 0.1"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.09 0.1 0.1"/>
            </geometry>
        </collision>
    </link>

    <joint name="vertical_support_joint_1" type="fixed">
        <parent link="verticle_link"/>
        <child link="verticle_support_link_1"/>
        <origin xyz="-0.09 0 0.30" rpy="0 0 0"/>
    </joint>


    <link name="verticle_support_link_2">
        <xacro:def_inertia mass="0.05"/>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.09 0.1 0.1"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.09 0.1 0.1"/>
            </geometry>
        </collision>
    </link>

    <joint name="vertical_support_joint_2" type="fixed">
        <parent link="verticle_link"/>
        <child link="verticle_support_link_2"/>
        <origin xyz="0.09 0 0.30" rpy="0 0 0"/>
    </joint>

    <link name="forward_link">
        <xacro:def_inertia mass="0.5"/>
        <visual>
            <origin xyz="0 0 0.17" rpy="0 0 0"/>
            <geometry>
                <box size="0.09 0.1 0.3"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.17" rpy="0 0 0"/>
            <geometry>
                <box size="0.09 0.1 0.3"/>
            </geometry>
        </collision>
    </link>

    <joint name="joint_3" type="revolute">
        <parent link="verticle_support_link_1"/>
        <child link="forward_link"/>
        <origin xyz="0.09 0 0" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="-1.5707" upper="1.5707" effort="30.0" velocity="10.0"/>
    </joint>


    <xacro:def_transmission number="1"/>
    <xacro:def_transmission number="2"/>
    <xacro:def_transmission number="3"/>

</robot>